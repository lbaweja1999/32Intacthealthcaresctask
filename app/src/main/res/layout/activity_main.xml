<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
<include
    layout="@layout/toolbar"></include>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageViewprofile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>
    <TextView
        android:layout_below="@+id/imageViewprofile"
        android:id="@+id/textViewName"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
    <TextView
        android:layout_below="@+id/textViewName"
        android:id="@+id/textViewinfo"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Welcome to 32Intact Healcthcare"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textViewinfo"
        android:layout_marginTop="40dp"
        android:id="@+id/book"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:text="Book an Appointment"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_local_hospital_black_24dp"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        ></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textViewinfo"
        android:layout_toRightOf="@+id/book"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="40dp"
        android:id="@+id/check"
        android:text="Check Appointments"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_list_black_24dp"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book"
        android:layout_marginTop="40dp"
        android:id="@+id/logout"
        android:text="Log Out"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_logout"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"></Button>


</RelativeLayout>